<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card-header"> Past transactions for <%= current_user.first_name + " " +  current_user.last_name %> </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Ticker</th>
          <th>Type</th>
          <th>Shares</th>
          <th>Price</th>
          <th>Cost</th>
          <th>Fund</th>
          <th>Reason</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.ticker %></td>
            <td><%= transaction.tradeType %></td>
            <td><%= commaNumber(transaction.shares) %></td>
            <td><%= number_to_currency(transaction.price) %></td>
            <td> <%= number_to_currency(transaction.cost) %></td>
            <td><%= transaction.fund.name %></td>
            <td><%= transaction.reason %></td>
            <td><%= transaction.created_at.strftime("%m/%d/%Y  %I:%M%p") %></td>
            <td><%= link_to 'Show', transaction %></td>
            <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
            <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
