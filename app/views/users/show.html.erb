<div class="card">
  <div class="card-header"> User Details </div>
  <div class="card-body">
    <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
    </p>
    <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <p>
      <strong>Role:</strong>
      <%= @user.role %>
    </p>
    <%= link_to 'Edit', edit_user_path(@user) %>
    <br />
    <br />
    <% @transactions = current_user.transactions%>
    <%= render 'layouts/tradesTable' %>
  </div>
</div>
