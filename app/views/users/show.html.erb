<div class="card">
  <div class="card-header"> User Details </div>
  <div class="card-body">
    <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
    </p>
    <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <p>
      <strong>Role:</strong>
      <%= @user.role %>
    </p>
    <%= link_to 'Edit', edit_user_path(@user) %>
    <br /> <br />

        <table class="table">
          <thead>
            <tr>
              <th>Ticker </th>
              <th>Order </th>
              <th>Entry Date</th>
              <th>Price</th>
              <th>Shares</th>
              <th>Book Value</th>
              <th>Investment Reason</th>
              <th>Analyst</th>
            </tr>
          </thead>
          <tbody>
            <% @user.transactions.each do |transaction| %>
              <tr>
              
                <td> <a href="/positions/<%= transaction.position.id %>"><%= transaction.ticker %> </a>  </td>
                <td> <%= transaction.tradeType %></td>
                <td> <%= dateFormat(transaction.created_at) %></td>
                <td><%= number_to_currency(transaction.price) %></td>
                <td><%= commaNumber(transaction.shares) %></td>
                <td><%= number_to_currency(transaction.cost) %></td>
                <td><%= transaction.reason %></td>
                <td> <a href="/users/<%=transaction.user.id %>"> <%= transaction.user.full_name %></a></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
