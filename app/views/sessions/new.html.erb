<div class="card">
  <div class="card-header"> Sign In </div>
  <div class="card-body">
    <%= form_with url: sessions_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <%= f.submit "Sign In" %>
    <% end %>
  </div>
</div>
</div>
